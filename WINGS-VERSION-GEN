#!/bin/sh

WVF=vsn.mk
DEF_VER=v1.2.x.y.WINGS

WINGS_BRANCH=''

LF='
'
# First see if there is a version file (included in the source package),
# then try 'git describe', then DEF_VER.
if test -f version
then
	VN=$(cat version) || VN="$DEF_VER"
elif test -d .git -o -f .git &&
	VN=$(git describe --abbrev=4 HEAD 2>/dev/null) &&
	case "$VN" in
	*$LF*) (exit 1) ;;
	v[0-9]*-*-*)
		git update-index -q --refresh
		test -z "$(git diff-index --name-only HEAD --)" ||
		VN="$VN-dirty"
		WINGS_BRANCH=$(git symbolic-ref HEAD | sed 's/.*\///') ;;
	v[0-9]*)
		test -z "$(git diff-index --name-only HEAD --)" ||
		VN="$VN-dirty" ;;
	esac
then
        VN=$(echo "$VN" | sed -e 's/-/./g');
else
	VN="$DEF_VER"
fi

VN=$(expr "$VN" : v*'\(.*\)')

# Only update the file if there has been a change to
# the version number.
if test -r $WVF
then
	VC=$(sed -n -e 's/^WINGS_VSN = //p' <$WVF)
else
	VC=unset
fi
test "$VN" = "$VC" || {
	echo >&2 "WINGS_VSN = $VN"
	echo "# Automatically generated by $0 - DO NOT EDIT." > $WVF
	echo "WINGS_VSN = $VN" >>$WVF
	echo "WINGS_BRANCH = $WINGS_BRANCH" >>$WVF
}

